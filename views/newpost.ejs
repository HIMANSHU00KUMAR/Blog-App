<div class="newpostarea">
    <h1 id="newposth1">Create a New Post</h1>
  <form class="newpostForm" action="/newpost" method="post">
    <label for="title">Title:</label>
    <input type="text" id="title" placeholder="Title" name="title" required>
    <br>
    <label for="content">Content:</label>
    <textarea id="content" placeholder="Content" name="content" required></textarea>
    <br>
    <button type="submit">Create Post</button>
  </form>
</div>


